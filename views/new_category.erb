<form action="/categories" method="post">
  <p>
    <label>Name:</label>
    <input type="text" name="name">
  </p>

  <p>
    <label>Product List:</label>
    <% @products.each do |product| %>
    <li><%= product['name'] %></li>
    <% end %>
  </p>

  <p>
    <label>Which existing products belong in this category:</label>
    <input type="text" name="categories">
  </p>

  <p>
    <input type="submit" name="" value=" Create the new category.">
  </p>
</form>